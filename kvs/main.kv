#:kivy 1.0
<MainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: 'Battery Status'
            halign: 'center'
            left_action_items: [["menu", lambda x: x]]
            right_action_items: [["clock", lambda x: x]]
        MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(20), dp(20), dp(20), dp(20)]
            MDBoxLayout:
                orientation: 'horizontal'
                
                MDLabel:
                    text: "Dispositivo"
                MDLabel:
                    id: device
                    text: "Tablet Yoga FT380"
                    halign: 'left'